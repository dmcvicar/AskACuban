<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mcvicar.askacuban">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ListItemsActivity"
            android:label="@string/title_activity_list_items"></activity>
        <activity
            android:name=".activities.PostItemActivity"
            android:label="@string/title_activity_post_item" />
        <activity
            android:name=".activities.ListCommentsActivity"
            android:label="@string/title_activity_view_comments" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PostCommentActivity"
            android:label="@string/title_activity_post_comment"></activity>
    </application>

</manifest>
